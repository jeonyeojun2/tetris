<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tetris.ui.controllers.MainMenuController">
   <children>
      <Label text="TETRIS" textFill="#2c3e50">
         <font>
            <Font name="System Bold" size="48.0" />
         </font>
      </Label>
      <VBox alignment="CENTER" spacing="15.0">
         <children>
            <Button fx:id="startButton" mnemonicParsing="false" onAction="#onStartGame" prefWidth="200.0" text="게임 시작">
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
            <Button fx:id="scoreBoardButton" mnemonicParsing="false" onAction="#onScoreBoard" prefWidth="200.0" text="스코어보드">
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
            <Button fx:id="settingsButton" mnemonicParsing="false" onAction="#onSettings" prefWidth="200.0" text="설정">
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
            <Button fx:id="exitButton" mnemonicParsing="false" onAction="#onExit" prefWidth="200.0" text="종료">
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
         </children>
         <VBox.margin>
            <Insets top="30.0" />
         </VBox.margin>
      </VBox>
   </children>
   <padding>
      <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
   </padding>
</VBox>